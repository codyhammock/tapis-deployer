apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{name}}
spec:
  selector:
    matchLabels:
      app: {{name}}
  template:
    metadata:
      labels:
        app: {{name}}
    spec:
      containers:
      - name: {{name}}
        image: tapis/{{name}}:{{version | default("dev")}}
        imagePullPolicy: Always
        ports:
        - name: http
          containerPort: {{port | default("5000")}}
        env:
        - name: sql_db_url
          value: tenants-postgres:5432/tenants
        - name: postgres_user
          value: tenants
        - name: postgres_password
          valueFrom:
            secretKeyRef:
              name: tapis-tenants-secrets
              key: postgres-password
        - name: service_password
          valueFrom:
            secretKeyRef:
              name: tapis-tenants-secrets
              key: service-password
        volumeMounts:
        - name: tenants-config
          mountPath: /home/tapis/config.json
          subPath: tenants-config.json
      volumes:
      - name: tenants-config
        configMap: 
          name: global-config

