apiVersion: v1
kind: ConfigMap
metadata:
  name: tenants-config
data:
  tenants-config.json: |-
    {
      "service_site_id": "{{local_param["service_site_id"]|default(service_param["service_site_id"]|default(universal_param["service_site_id"]))}}",
      "service_tenant_id": "{{local_param["service_tenant_id"]|default(service_param["service_tenant_id"]|default(universal_param["service_tenant_id"]))}}",
      "service_name": "{{service_param["service_name"]}}",
      "postgres_user": "{{local_param["postgres_user"]|default(service_param["postgres_user"]|default(universal_param["postgres_user"]))}}",
      "tenants": ["*"],
      "use_sk": "{{local_param["use_sk"]|default(service_param["use_sk"]|default(universal_param["use_sk"]|default(true)))}}",
      "log_level": "{{local_param["log_level"]|default("DEBUG")}}",
      "show_traceback": {{local_param["show_traceback"]|default("false")}},
      {% if local_param["test_jwt"] is defined %}
      "test_jwt": "{{local_param["test_jwt"]}}"
      {% endif %}
    }